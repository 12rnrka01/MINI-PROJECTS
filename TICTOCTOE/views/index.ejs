<%- include('partials/header', { title: title }) %>

<div class="container">
    <div class="hero-section">
        <h1>Welcome to Game Hub</h1>
        <p>Play games with friends in real-time with chat functionality</p>
    </div>
    
    <div class="game-selection">
        <div class="game-card active">
            <h3>Tic-Tac-Toe</h3>
            <p>Classic 3x3 grid game with chat</p>
            <div class="game-actions">
                <button id="quick-play" class="btn-primary">Quick Play</button>
                <input type="text" id="room-code" placeholder="Enter room code" class="room-input">
                <button id="join-room" class="btn-secondary">Join Room</button>
            </div>
        </div>
        
        <div class="game-card disabled">
            <h3>Connect Four</h3>
            <p>Coming Soon...</p>
            <div class="game-actions">
                <button class="btn-disabled" disabled>Coming Soon</button>
            </div>
        </div>
        
        <div class="game-card disabled">
            <h3>Chess</h3>
            <p>Coming Soon...</p>
            <div class="game-actions">
                <button class="btn-disabled" disabled>Coming Soon</button>
            </div>
        </div>
    </div>
    
    <div class="features">
        <h2>Features</h2>
        <div class="feature-grid">
            <div class="feature-item">
                <h4>Real-time Gameplay</h4>
                <p>Play with friends instantly using WebSocket technology</p>
            </div>
            <div class="feature-item">
                <h4>Live Chat</h4>
                <p>Chat with your opponent during gameplay</p>
            </div>
            <div class="feature-item">
                <h4>Room System</h4>
                <p>Create private rooms or join existing ones</p>
            </div>
            <div class="feature-item">
                <h4>No Registration</h4>
                <p>Jump straight into games without signing up</p>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('quick-play').addEventListener('click', () => {
    const roomId = 'room_' + Math.random().toString(36).substr(2, 9);
    window.location.href = `/game/${roomId}`;
});

document.getElementById('join-room').addEventListener('click', () => {
    const roomCode = document.getElementById('room-code').value.trim();
    if (roomCode) {
        window.location.href = `/game/${roomCode}`;
    } else {
        alert('Please enter a room code');
    }
});

document.getElementById('room-code').addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
        document.getElementById('join-room').click();
    }
});
</script>

<%- include('partials/footer') %>