<!-- views/games/dotslines/dotslines-game-board.ejs -->
<div class="dotslines-game-container">
    <!-- Game Controls Section -->
    <div class="dotslines-controls">
        <div class="grid-info">
            <h3 id="grid-size-display">Grid: 4√ó4 dots (3√ó3 boxes)</h3>
            <div id="turn-indicator" class="turn-indicator">Waiting for game to start...</div>
        </div>
        
        <div class="game-stats" id="game-stats">
            <div class="stat-item">
                <span class="stat-label">Boxes:</span>
                <span class="stat-value">0/9</span>
            </div>
            <div class="stat-item">
                <span class="stat-label">Progress:</span>
                <span class="stat-value">0%</span>
            </div>
        </div>
        
        <div class="game-actions">
            <button id="reset-dots-game" class="btn-secondary">New Game</button>
            <button id="request-hint" class="btn-hint">üí° Hint</button>
        </div>
    </div>

    <!-- Main Game Area -->
    <div class="dotslines-main-game">
        <!-- Game Board -->
        <div class="dotslines-board-section">
            <div class="board-container">
                <div id="dotslines-board" class="dotslines-board">
                    <!-- SVG board will be generated by JavaScript -->
                </div>
                
                <!-- Game Progress Bar -->
                <div class="progress-container">
                    <div class="progress-bar">
                        <div id="game-progress-bar" class="progress-fill" style="width: 0%"></div>
                    </div>
                    <small class="progress-text">Game Progress</small>
                </div>
            </div>
        </div>

        <!-- Scores and Info -->
        <div class="dotslines-info-section">
            <div class="current-scores-section">
                <h3>Current Scores</h3>
                <div id="current-scores" class="current-scores">
                    <!-- Score items will be populated by JavaScript -->
                </div>
            </div>
            
            <div class="game-info">
                <div class="info-item">
                    <span class="info-label">Total Boxes:</span>
                    <span id="total-boxes" class="info-value">9</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Completed:</span>
                    <span id="completed-boxes" class="info-value">0</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Remaining:</span>
                    <span id="remaining-boxes" class="info-value">9</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Players Section -->
    <div class="dotslines-players-section">
        <h3>Players (<span id="players-count-dots">0/8</span>)</h3>
        <div id="players-list" class="dotslines-players-list">
            <!-- Player cards will be added here -->
        </div>
        
        <!-- Game Controls -->
        <div class="player-controls">
            <button id="toggle-spectator" class="btn-spectator" style="display: none;">
                üëÅÔ∏è Toggle Spectator
            </button>
        </div>
    </div>
</div>
